<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <servlet>
    <servlet-name>EndpointsServlet</servlet-name>
    <servlet-class>com.google.api.server.spi.EndpointsServlet</servlet-class>
    <init-param>
        <param-name>services</param-name>
        <param-value>fr.loseawards.user.api.UserApi,fr.loseawards.home.api.HomeApi,fr.loseawards.category.api.CategoryApi,fr.loseawards.nomination.api.NominationApi,fr.loseawards.avatar.api.AvatarApi,fr.loseawards.image.api.ImageApi,fr.loseawards.global.api.GlobalApi,fr.loseawards.comment.api.CommentApi,fr.loseawards.vote.api.VoteApi,fr.loseawards.decision.api.DecisionApi</param-value>
    </init-param>
    <init-param>
        <param-name>restricted</param-name>
        <param-value>false</param-value>
    </init-param>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>EndpointsServlet</servlet-name>
    <url-pattern>/_ah/api/*</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>